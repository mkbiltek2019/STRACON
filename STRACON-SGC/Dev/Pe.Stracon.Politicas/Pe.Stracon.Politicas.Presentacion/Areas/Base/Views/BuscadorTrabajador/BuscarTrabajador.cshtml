@using Pe.Stracon.Politicas.Presentacion.Recursos.Base

<div id="divContenedorTrabajadorComponente">
    <form id="frmBuscadorTrabajadorComponente">
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label for="txtNombreUsuarioComponente">@BuscadorTrabajador.EtiquetaUsuario</label>
                    <input type="text" id="txtNombreUsuarioComponente" class="form-control" />
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label for="txtNombreTrabajadorComponente">@BuscadorTrabajador.EtiquetaNombre</label>
                    <input type="text" id="txtNombreTrabajadorComponente" class="form-control" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 text-right">
                <button id="btnBuscarTrabajadorComponente" class="btn btn-default" type="button">@GenericoResource.BotonMostrar</button>
                <hr />
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <h3>@GenericoResource.EtiquetaResultadosBusqueda</h3>
            </div>
        </div>
        <div id="divGrdResultTrabajadorComponente">
        </div>
    </form>
    <div class="comp-Modal-footer">
        <button class="btn btn-default" id="btnCancelarTrabajadorComponente">@GenericoResource.BotonCancelar</button>
        <button class="btn btn-primary" id="btnAceptarTrabajadorComponente">@GenericoResource.BotonAceptar</button>
    </div>
</div>

<script type="text/javascript">
    ns('Pe.Stracon.Politicas.Presentacion.Base.BuscadorTrabajador.Actions');
    Pe.Stracon.Politicas.Presentacion.Base.BuscadorTrabajador.Actions.Buscar = '@Url.Action("Buscar", "BuscadorTrabajador", new { Area = "Base" })';

    ns('Pe.Stracon.Politicas.Presentacion.Base.BuscadorTrabajador.Resource');
    Pe.Stracon.Politicas.Presentacion.Base.BuscadorTrabajador.Resource.EtiquetaTitulo           = '@Html.Raw(BuscadorTrabajador.EtiquetaTitulo)';
    Pe.Stracon.Politicas.Presentacion.Base.BuscadorTrabajador.Resource.GridNombreUsuario        = '@Html.Raw(BuscadorTrabajador.GridNombreUsuario)';
    Pe.Stracon.Politicas.Presentacion.Base.BuscadorTrabajador.Resource.GridNumeroDocumento      = '@Html.Raw(BuscadorTrabajador.GridNumeroDocumento)';
    Pe.Stracon.Politicas.Presentacion.Base.BuscadorTrabajador.Resource.GridNombreTrabajador     = '@Html.Raw(BuscadorTrabajador.GridNombreTrabajador)';
    Pe.Stracon.Politicas.Presentacion.Base.BuscadorTrabajador.Resource.GridCorreoElectronico    = '@Html.Raw(BuscadorTrabajador.GridCorreoElectronico)';
</script>