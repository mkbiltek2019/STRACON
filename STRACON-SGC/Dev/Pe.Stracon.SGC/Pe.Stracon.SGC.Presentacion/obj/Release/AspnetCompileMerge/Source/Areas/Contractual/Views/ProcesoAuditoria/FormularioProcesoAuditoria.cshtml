@using Pe.Stracon.SGC.Presentacion.Recursos.Base
@using Pe.Stracon.SGC.Presentacion.Recursos.Contractual
@model Pe.Stracon.SGC.Presentacion.Core.ViewModel.Contractual.ProcesoAuditoria.ProcesoAuditoriaFormulario
<form id="frmProcesoAuditoria">
    <div class="row">
        <input type="hidden" id="hdnProcesoAuditoria" name="hdnProcesoAuditoria" value="@Model.procesoAuditoriaResponse.CodigoAuditoria" />
        <div class="col-sm-6">
            <div class="form-group">
                <label for="slcUnidadOperativa">@ProcesoAuditoriaResource.EtiquetaUnidadOperativa</label>
                @Html.DropDownList("slcFrmUnidadOperativa", @Model.UnidadOperativa , new { @class = "form-control", @id = "slcFrmUnidadOperativa", @validable = "required ValidarUnidadOperativa"})
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label for="txtFechaPlanificada">@ProcesoAuditoriaResource.EtiquetaFechaPlanificada</label>            
                <div class="input-group">
                    @Html.TextBox("txtFrmFechaPlanificada", @Model.procesoAuditoriaResponse.FechaPlanificadaString , new { @class = "form-control", @id = "txtFrmFechaPlanificada", @validable = "required ValidarFechaPlanificada"})
                    <div class="input-group-addon"><span class="fa fa-calendar"></span></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label for="txtFechaEjecucion">@ProcesoAuditoriaResource.EtiquetaFechaEjecucion</label>
                <div class="input-group">
                    @Html.TextBox("txtFrmFechaEjecucion", @Model.procesoAuditoriaResponse.FechaEjecucionString , new { @class = "form-control", @id = "txtFrmFechaEjecucion" })
                    <div class="input-group-addon"><span class="fa fa-calendar"></span></div>
                </div>            
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label for="spnCantidadOrdenes">@ProcesoAuditoriaResource.EtiquetaCantidadOrdenes</label>
                @Html.TextBox("spnCantidadOrdenes", @Model.procesoAuditoriaResponse.CantidadAuditadas, new { @class = "form-control", @id = "spnCantidadOrdenes", @Mask = "integer" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label for="spnCantidadOrdenesObservadas">@ProcesoAuditoriaResource.EtiquetaCantidadOrdenesObservadas</label>
                @Html.TextBox("spnCantidadOrdenesObservadas", @Model.procesoAuditoriaResponse.CantidadObservadas , new { @class = "form-control", @id = "spnCantidadOrdenesObservadas", @Mask = "integer" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <label for="txtResultados">@ProcesoAuditoriaResource.EtiquetaResultados</label>
                @Html.TextArea("txtResultados", @Model.procesoAuditoriaResponse.ResultadoAuditoria , new { @class = "form-control", @id = "txtResultados", @maxLength = 1000 })
            </div>
        </div>
    </div>
</form>

<div class="comp-Modal-footer">
    <button class="btn btn-default" id="btnFrmProcesoCancelar">@GenericoResource.BotonCancelar</button>
    <button class="btn btn-primary" id="btnFrmProcesoGrabar">@GenericoResource.BotonGrabar</button>
</div>
