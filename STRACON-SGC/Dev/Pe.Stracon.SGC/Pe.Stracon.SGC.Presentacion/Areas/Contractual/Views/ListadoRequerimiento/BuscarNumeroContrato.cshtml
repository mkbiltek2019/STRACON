@using Pe.Stracon.SGC.Presentacion.Recursos.Base
@using Pe.Stracon.SGC.Presentacion.Recursos.Contractual
@using Pe.Stracon.SGC.Infraestructura.Core.Context

<div class="row">
      <div class="col-sm-12">
                <div class="form-group">
                    <label>@Html.Raw(BuscarNumeroContratoResource.EtiquetaTipoDocumento)</label>
                    <div class="row">
                        <div class="col-sm-4">
                            <input type="radio" value="C" name="rbTipoDocumento" checked="checked">
                            <label>@Html.Raw(BuscarNumeroContratoResource.EtiquetaTipoDocumentoContrato)</label>
                        </div>
                        <div class="col-sm-4">
                            <input type="radio" value="A" name="rbTipoDocumento">
                            <label>@Html.Raw(BuscarNumeroContratoResource.EtiquetaTipoDocumentoAdenda)</label>
                        </div>
                        <div class="col-sm-4">
                            <input type="radio" value="O" name="rbTipoDocumento">
                            <label>@Html.Raw("Orden")</label>
                        </div>
                    </div>
                </div>
     </div>

    <div class="col-sm-12">      
        <p>@Html.Raw(BuscarNumeroContratoResource.EtiquetaNumeroContrato) </p>        
    </div>

    <div class="col-sm-12">
        <div class="form-group">          
             @Html.TextBox("txtNumeroContratoCopia", null, new { @class = "form-control", @id = "txtNumeroContratoCopia" })
        </div>
    </div>
</div>
<div class="comp-Modal-footer">
    <button class="btn btn-default" id="btnFrmCancelar">@GenericoResource.BotonCancelar</button>
    <button class="btn btn-primary" id="btnFrmBuscar">@BuscarNumeroContratoResource.EtiquetaCopiarContrato</button>
</div>
