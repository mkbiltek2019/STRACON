        ns('Pe.Stracon.SGC.Presentacion.Contractual.ReporteContratoCorporativo.Models')
        Pe.Stracon.SGC.Presentacion.Contractual.ReporteContratoCorporativo.Models.Index = @(Html.Raw(Json.Encode(Model)));
